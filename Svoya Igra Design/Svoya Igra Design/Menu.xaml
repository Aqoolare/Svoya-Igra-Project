<Window x:Class="Svoya_Igra_Design.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Svoya_Igra_Design"
        mc:Ignorable="d"
        Title="Меню" Height="498" Width="300" Background="#FF10192A" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="CreateGameButton" Content="Создать игру" Margin="10,310,10,88" FontSize="24" Click="CreateGameButton_Click"/>
        <Image Source="Resources/logo.png" Margin="10,-27,10,278"/>
        <Button x:Name="StartGameButton" Content="Начать игру" Margin="10,234,10,0" FontSize="24" Click="StartGameButton_Click" Height="71" VerticalAlignment="Top"/>
        <Button x:Name="RecordsButton" Content="Список лидеров" Margin="10,0,10,12" FontSize="24" Click="RecordsButton_Click" Height="71" VerticalAlignment="Bottom"/>
        <Button x:Name="ContinueGameButton" Content="Продолжить игру" Margin="10,158,10,0" FontSize="24" Height="71" VerticalAlignment="Top" Click="ContinueGameButton_Click"/>
    </Grid>
</Window>
