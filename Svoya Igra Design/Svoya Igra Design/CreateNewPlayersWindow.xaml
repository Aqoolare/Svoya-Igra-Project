<Window x:Class="Svoya_Igra_Design.CreateNewPlayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Svoya_Igra_Design"
        mc:Ignorable="d"
        Title="Добавление игроков" Height="457" Width="300" ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="PlayerListBox" Margin="10,10,10,149"/>
        <TextBox x:Name="PlayerTextBox" Text="Введите имя" Margin="10,0,10,114" TextWrapping="Wrap" MouseDoubleClick="PlayerTextBox_MouseDoubleClick" Height="30" VerticalAlignment="Bottom"/>
        <Button x:Name="AddPlayerButton" Content="Добавить игрока" Margin="10,0,10,79" RenderTransformOrigin="0.5,0.5" Click="AddPlayerButton_Click" Height="30" VerticalAlignment="Bottom"/>
        <Button x:Name="CreatePlayerListButton" Content="Применить" Margin="10,0,10,9" Click="CreatePlayerListButton_Click" Height="30" VerticalAlignment="Bottom"/>
        <Button x:Name="DeletePlayerButton" Content="Удалить игрока" Margin="10,0,10,44" Click="DeletePlayerButton_Click" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
