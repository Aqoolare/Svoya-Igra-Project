<Window x:Class="Svoya_Igra_Design.FileNameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Svoya_Igra_Design"
        mc:Ignorable="d"
        Title="FileNameForm" Height="178.448" Width="374.569" Background="#FF10192A" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#192233"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF192233"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="fileNameTextBox" Height="35" Margin="42,40,42,0" TextWrapping="Wrap" Text="Введите имя файла (без расширения)" VerticalAlignment="Top" MouseDoubleClick="FileNameTextBox_MouseDoubleClick"/>
        <Button Content="OK" Margin="142,80,142,0" Height="32" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
